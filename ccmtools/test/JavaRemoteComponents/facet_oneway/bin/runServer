#!/bin/sh

if [ -z "$CCMTOOLS_HOME" ]; then
echo "ERROR!"
echo "Environment variable CCMTOOLS_HOME not found!"
exit
fi

CLASSPATH=$CCMTOOLS_HOME/lib/ccm-runtime.jar:./xxx/build:$CLASSPATH

$JAVA_HOME/bin/java -enableassertions -cp $CLASSPATH Server -ORBInitRef NameService=$CCM_NAME_SERVICE -ORBServerHost ${HOSTNAME}

# Note: If a Java application creates a CORBA object reference, we
# have to set -ORBServerHost ${HOSTNAME}. This ${HOSTNAME} will be
# part of the generated CORBA object reference (or IOR)!!