void %(ComponentType)s_impl::connect_%(Identifier)s(%(UsesType)s_ptr value)
  throw(Components::AlreadyConnected, Components::InvalidConnection )	
{
  DEBUGNL(" %(ComponentType)s_impl::connect_%(Identifier)s()");

  reference_for_receptacle_%(Identifier)s = %(UsesType)s::_duplicate (value);
}

%(UsesType)s_ptr %(ComponentType)s_impl::disconnect_%(Identifier)s()
  throw(Components::NoConnection)
{
  DEBUGNL(" %(ComponentType)s_impl::disconnect_%(Identifier)s()");

  %(UsesType)s_var _res = %(UsesType)s::_duplicate (reference_for_receptacle_%(Identifier)s);
  reference_for_receptacle_%(Identifier)s = %(UsesType)s::_nil ();
  return _res._retn ();
}

%(UsesType)s_ptr %(ComponentType)s_impl::get_connection_%(Identifier)s()
{
  DEBUGNL(" %(ComponentType)s_impl::get_connection_%(Identifier)s()");

  return %(UsesType)s::_duplicate (reference_for_receptacle_%(Identifier)s);
}


