    %(ComponentType)s* c, CCM_%(ComponentType)s* lc)
    : component(c), local_component(lc)
{
    ValidConnection = true;
    facet = local_component->get_%(Identifier)s();
}

%(ComponentType)sFacetAdapter%(Identifier)s::~%(ComponentType)sFacetAdapter%(Identifier)s()
{
    delete facet;
}


