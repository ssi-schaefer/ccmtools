# -*- python -*-

PROVIDE_SYMBOL('BOOST_GRAPH')
REQUIRE_SYMBOL('BOOST_ENTRY', REQUIRED)
REQUIRE_SYMBOL('BOOST_COMMON', REQUIRED)

PROVIDE_H('boost/graph/*')

ACINCLUDE_M4(
    lines=['AC_DEFUN([CONFIX_BOOST_GRAPH], [AC_REQUIRE([CONFIX_BOOST])])'],
    flags=[PROPAGATE])

CONFIGURE_AC(
    lines=['CONFIX_BOOST_GRAPH'],
    order=AC_LIBRARIES,
    flags=[PROPAGATE])

EXTERNAL_LIBRARY(incpath=['@BOOST_INC@'])
