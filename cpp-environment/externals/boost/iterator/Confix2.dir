# -*- python -*-

PROVIDE_SYMBOL('BOOST_ITERATOR')
REQUIRE_SYMBOL('BOOST_ENTRY', REQUIRED)
REQUIRE_SYMBOL('BOOST_COMMON', REQUIRED)

PROVIDE_H('boost/iterator/*')

ACINCLUDE_M4(
    lines=['AC_DEFUN([CONFIX_BOOST_ITERATOR], [AC_REQUIRE([CONFIX_BOOST])])'],
    flags=[PROPAGATE])

CONFIGURE_AC(
    lines=['CONFIX_BOOST_ITERATOR'],
    order=AC_LIBRARIES,
    flags=[PROPAGATE])

EXTERNAL_LIBRARY(incpath=['@BOOST_INC@'])
